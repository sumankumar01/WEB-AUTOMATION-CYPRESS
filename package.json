{
  "name": "cypressautomation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "node_modules\\.bin\\cypress run",
    "test:all": "npm cypress run",
    "cy:run": "cypress run",
    "cy:verify": "cypress verify",
    "cypress:open": "cypress open",
     "results-junit:delete": "rm -rf cypress/results/junit/* || true",
    "results-junit:combine": "jrm cypress/results/junit/combined-report.xml \"cypress/results/junit/*.xml\"",
    "report:pre": "npm run results-junit:delete",
    "report:post": "npm run results-junit:combine",
    "test:report": "npm run report:pre && npx cypress run && npm run report:post"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/browserify-preprocessor": "^3.0.2",
    "cypress": "^13.16.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-xpath": "^2.0.1"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.3"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "filterSpecs": true,
    "omitFiltered": true,
    "stepDefinitions": [
      "cypress/e2e/**/*.{js,ts}",
      "cypress/e2e/*.{js,ts}",
      "cypress/support/step_definitions/**/*.{js,ts}"
    ],
    "json": {
      "enabled": true
    },
    "html": {
      "enabled": true
    },
    "usage": {
      "enabled": true
    },
    "messages": {
      "enabled": true
    }
  }
}
